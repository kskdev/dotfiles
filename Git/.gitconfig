# Git settings
# set ~/.gitconfig (as a global settings)

[user]
	# (Please write in ~/.gitconfig.local)
	# name  = Your Name
	# email = your.email@example.com

[include]
    path = ~/.gitconfig.local # generated by make_link.sh

[credential]
	# PAT (Personal Access Token) を ~/.git-credentials に記述
	# 記述内容は次の1行: https://<username>:<token>@github.com
	# PATの発行(GitHub): https://github.com/settings/tokens
    helper = store

[core]
	# 大文字小文字を区別して認識
	ignorecase = false
	# git statusで日本語ファイル名を文字化けせずに表示
	quotepath = false
	# git commitなどでviを起動する
	editor = vim
	# gitignoreファイルを読み込む
	excludesfile = ~/.gitignore_global
	# 差分アルゴリズムをより正確なものに変更
	pager = less -FX
	# 改行コードを UNIX/Linuxの LF 統一(変換)
	autocrlf = input
[init]
	# デフォルトブランチ名を main に
	defaultBranch = main
[help]
	# タイポした時に 10 (1秒) 待って自動実行
	autocorrect = 10
[diff]
	algorithm = histogram
[push]
	# 現在のブランチと同名のブランチに push する
	default = current
[pull]
	# pull 時の警告を抑制（お好みで true にすると rebase 優先になります）
	rebase = false
[color]
	ui = auto
[alias]
	# list view of alias commands.
    aliases = !git config --get-regexp '^alias\\.' | sed 's/alias\\.\\([^ ]*\\) \\(.*\\)/\\1\\\t => \\2/' | sort
	# Git log 
    l   = log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
    ll  = log --stat --abbrev-commit
    lg  = log --color --graph --pretty=format:'%C(bold white)%h%Creset -%C(bold green)%d%Creset %s %C(bold green)(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    llg = log --color --graph --pretty=format:'%C(bold white)%H %d%Creset%n%s%n%+b%C(bold blue)%an <%ae>%Creset %C(bold green)%cr (%ci)' --abbrev-commit

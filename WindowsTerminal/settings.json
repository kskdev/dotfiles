{
    "$schema": "https://aka.ms/terminal-profiles-schema",
    "defaultProfile": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}",
    // You can add more global application settings here.
    // To learn more about global settings, visit https://aka.ms/terminal-global-settings
    // 選択範囲を右クリックでコピペ(false: コピーのみ)
    "copyOnSelect": false,
    // If enabled, formatted data is also copied to your clipboard
    // コピー時に,プレーンテキストとしてクリップボードに格納
    "copyFormatting": false,
    // システム起動時に自動起動
    "startOnUserLogin": true,
    // タブサイズの設定 "equal","titleLength","compact"
    "tabWidthMode": "equal",
    // 複数タブ表示中,一括で閉じる場合にポップアップを表示
    "confirmCloseAllTabs": true,
    // タイトルバーを非表示
    "showTabsInTitlebar": true,
    // スクロールバーの表示 "visible","hidden"
    "scrollbarState": "visible",
    // 履歴を残す行数
    "historySize": 10001,
    // アンチエイリアス効果 "grayscale","cleartype","aliased"
    "antialiasingMode": "aliased",
    // カーソルの形状 "bar","vintage","underscore","filledBox","emptyBox"
    "cursorShape": "bar",
    // 幅と高さの初期値
    "initialCols": 90,
    "initialRows": 24,


